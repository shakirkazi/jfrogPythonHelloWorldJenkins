pipeline {
    agent any

    environment {
        ARTIFACTORY_SERVER = 'Your-Artifactory-Server-ID'
        PYPI_REPO = 'your-pypi-repo'
        PACKAGE_NAME = 'your-python-package'
        JFROG_CLI_HOME = "${env.WORKSPACE}/jfrog-cli"
    }

    stages {
        stage('Setup') {
            steps {
                script {
                    // Ensure JFrog CLI is installed and configured
                    if (!fileExists('jfrog')) {
                        sh 'curl -fL https://getcli.jfrog.io | sh'
                    }
                    sh "jfrog rt config --url=$ARTIFACTORY_SERVER --user=$ARTIFACTORY_USER --password=$ARTIFACTORY_PASSWORD --interactive=false"
                }
            }
        }

        stage('Build') {
            steps {
                script {
                    // Your build steps here
                    sh 'python setup.py sdist'
                }
            }
        }

        stage('Publish') {
            steps {
                script {
                    // Publish to Artifactory
                    sh "jfrog rt upload --flat=true dist/$PACKAGE_NAME-*.tar.gz $PYPI_REPO/"
                }
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}